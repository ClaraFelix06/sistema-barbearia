@startuml

class Cliente {
    - id: int
    - nome: String
    - telefone: String
    - email: String

    + Cliente(nome, telefone, email)
    + atualizarDados(nome, telefone, email)
}
class Barbeiro {
    - id: int
    - nome: String
}

class Servico {
    - id: int
    - nome: String
    - preco: double
    - duracao: int  
}

class Agendamento {
    - id: int
    - data: Date
    - horaInicio: String
    - status: StatusAgendamento
    - cliente: Cliente
    - barbeiro: Barbeiro
    - servico: Servico

    + confirmar(): void
    + cancelar(): void
}  

class HorarioDisponivel {
    - id: int
    - data: Date
    - horaInicio: String
    - horaFim: String
    - disponivel: boolean
    - barbeiro: Barbeiro

    + bloquear(): void
    + liberar(): void
}

class GerenciadorAgendamentos {
    + criarAgendamento(): void
    + cancelarAgendamento(ag: Agendamento): void
    + listarAgendamentos(barbeiro: Barbeiro): List<Agendamento>
}



Cliente "1" -- "*" Agendamento : "possui"
Barbeiro "1" -- "*" Agendamento : "executa"
Servico "1" -- "*" Agendamento : "inclui"

Barbeiro "1" -- "*" HorarioDisponivel : "tem"

GerenciadorAgendamentos --> Agendamento : "cria/gerencia"

@enduml
